@model IEnumerable<TMSite.Models.Driver>

@{
    ViewBag.Title = "Index";
}

<h2>DRIVERS</h2>

<div class="container">
    @using (Html.BeginForm())
    {

        <p>
            <div class="create col-md-10 form-inline">

                <label>Driver Last Name:</label>
                @Html.TextBox("searchName", "", new { @class = "from-control" })
                <input type="submit" value="Search" class="btn btn-info" />
                @Html.ActionLink("Add New Driver", "Create", null, new { @class = "btn btn-success" })
            </div>
       </p>

    }

  </div>&nbsp;&nbsp;



        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.LastNameSort })
                    @*@Html.DisplayNameFor(model => model.LastName)*@
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.LicenceNumber)
                </th>*@
                <th>
                    @Html.ActionLink("Licence Expiry Date", "Index", new { sortOrder = ViewBag.LicenceExpDate })
                    @*@Html.DisplayNameFor(model => model.LicenceExpiryDate)*@
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HomePhone)
                </th>
