                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomePhone)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>*@
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.NextToKin)
                    </td>
                    <td>

                        <img src="@Url.Content(item.Photo)" height="100" width="85" style="border:inset" />

                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.DriverID }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Edit", "Edit", new { id = item.DriverID }, new { @class = "btn btn-warning" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.DriverID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
