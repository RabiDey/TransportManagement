        <dt>
            @Html.DisplayNameFor(model => model.CurrentMileage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CurrentMileage)
        </dd>

        

        <dt>
            @Html.DisplayNameFor(model => model.FuelCardNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FuelCardNumber)
        </dd>

    </dl>
    <table class="table">
        <tr>
            <th>
                Driver Name
            </th>
            <th>
                Route Name
            </th>
        </tr>
        @foreach(var item in Model.Routes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(ModelItem => item.Driver.FirstName)
                   
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => item.RouteName)
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.VehicleID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back to Vehicles", "Index", null, new { @class = "btn btn-danger" })

   
</p>
